    }

    private async Task ReceiveFrom_TopRow_SaveBatterySetting()
    {
        TriggerAlert("Save");
    }

    private async Task ReceiveFrom_TopRow_ApplyDefaultValue()
    {
        TriggerAlert("DefaultVal");
    }

    private void TriggerAlert(string _alertMessage_FromOtherFunc)
    {
        
        modal_IsOpen = true;

        AlertMessage_parent     = "";
        ConfirmBtn_Text_parent  = "";
        CancelBtn_Text_parent   = "";
        ConfirmBtn_Func_parent  = EventCallback.Empty;
        CancelBtn_Func_parent   = EventCallback.Empty;
        switch(_alertMessage_FromOtherFunc)
        {
            case "Save":
                AlertMessage_parent     = "是否確定要保存？";
                ConfirmBtn_Text_parent  = "確定";
                CancelBtn_Text_parent   = "取消";
                ConfirmBtn_Func_parent  = EventCallback.Factory.Create(this, ConfirmSave);
                CancelBtn_Func_parent   = EventCallback.Factory.Create(this, CancelSave);
                break;
            case "DefaultVal":
                AlertMessage_parent     = "確定要還原預設？";
                ConfirmBtn_Text_parent  = "確定";
                CancelBtn_Text_parent   = "取消";
                ConfirmBtn_Func_parent  = EventCallback.Factory.Create(this, ConfirmDefault);
                CancelBtn_Func_parent   = EventCallback.Factory.Create(this, CancelDefault);
                break;
            default:
                break;
        }
    }

    private void CloseAlert()
    {
        AlertMessage_parent = null;
    }
    private void CloseModal()
    {   
        //close modal
        modal_IsOpen = false;
        //Close Alert
        AlertMessage_parent = null;
    }

    private async Task ConfirmSave()
    {
        //Get CC, TC, CV, FV Data
        var sliderValues = new List<float>();
        sliderValues = (await JS.InvokeAsync<float[]>("transferSliderValue")).ToList();

        //arrange data
        BatterySetting Data = new BatterySetting()
        {
            CC_Display = sliderValues[0],
            TC_Display = sliderValues[1],
            CV_Display = sliderValues[2],
            FV_Display = sliderValues[3],
            CurveStage = selectedStage,
            CCT_Enable = CCT_Enable,
            CC_TimeOut_Display = CC_Timeout_value,
            CVT_Enable = CVT_Enable,
            CV_TimeOut_Display = CV_Timeout_value,
            FVT_Enable = FVT_Enable,
            FV_TimeOut_Display = FV_Timeout_value,
        };

        //save into DataCenter (for boardcast)
        if(DataCenter.Battery.SaveSettingData(Data))
        {
            await DataCenter.BroadcastBatteryChangeAsync();
        }
         
        //save as Json file (Or use API to call framework to save the setting)
         @*這裡或許要改成用API去改值就好，讓框架去下命令後保存此次設定以便下次帶入*@
        string jsonString = JsonSerializer.Serialize(Data, new JsonSerializerOptions{WriteIndented=true});
        string targetPath = AppJsonManager.Get_Writable_DataPath("LastTime_settingData.json");
        AppJsonManager.SavePartialJson(targetPath, "Battery_Setting", Data);

        CloseAlert();
        CloseModal();
    }

    private async Task CancelSave()
    {
        CloseAlert();
        CloseModal();
    }

