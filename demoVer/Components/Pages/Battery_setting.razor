    [JSInvokable("OnBatteryUpdated")]
    public void OnBatteryUpdated(JsonElement batteryData)
    {
        // 解析 batteryData → 更新 Sliders / Timeout / Enable 等 UI
        // 然後刷新畫面
        var options = new JsonSerializerOptions
        {
            PropertyNameCaseInsensitive = true
        };

        var ReceiveData_FromSignalR = batteryData.Deserialize<BatterySetting_To_JS>(options);
        if (ReceiveData_FromSignalR == null)
        {
            Console.WriteLine("❌ 無法反序列化 BatterySetting_To_JS");
            return;
        }
        Console.WriteLine("🔁 收到 BatterySetting 更新");


        //這邊的資料目前不影響UI畫面(Sliders只影響初始值)
        Sliders[0].Value    = ReceiveData_FromSignalR.cc_Display;
        Sliders[1].Value    = ReceiveData_FromSignalR.tc_Display;
        Sliders[2].Value    = ReceiveData_FromSignalR.cv_Display;
        Sliders[3].Value    = ReceiveData_FromSignalR.fv_Display;

        selectedStage       = ReceiveData_FromSignalR.curveStage;
        
        CCT_Enable          = ReceiveData_FromSignalR.cct_Enable;
        CC_Timeout_value    = ReceiveData_FromSignalR.cc_TimeOut_Display;
        CVT_Enable          = ReceiveData_FromSignalR.cvt_Enable;
        CV_Timeout_value    = ReceiveData_FromSignalR.cv_TimeOut_Display;
        FVT_Enable          = ReceiveData_FromSignalR.fvt_Enable;
        FV_Timeout_value    = ReceiveData_FromSignalR.fv_TimeOut_Display;
        
        InvokeAsync(StateHasChanged);
    }
