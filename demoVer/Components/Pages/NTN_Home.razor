    private void HandleCardUpdate(CardInfo _updatedCard)
    {
        var index = CardInfos.FindIndex(c => c.ID == _updatedCard.ID);
        if(index != -1)
        {
            Console.WriteLine("[NTN_HOME] : Card.ID : " + _updatedCard.ID + " updated");
            CardInfos[index] = _updatedCard;
