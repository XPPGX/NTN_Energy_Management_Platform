        string json = JsonSerializer.Serialize(CardInfos, new JsonSerializerOptions{
            WriteIndented = true
        });
        Console.WriteLine(json);
        CloseModal();
        StateHasChanged();
    }

    private async Task Read_CardInfos_FromJsonFile()
    {
        var filePath = "visibleCards.json";
        try
        {
            string json = File.ReadAllText(filePath);
            var options = new JsonSerializerOptions
            {
                PropertyNameCaseInsensitive = true
            };

            CardInfos = JsonSerializer.Deserialize<List<CardInfo>>(json, options) ?? new();
            CardInfos = CardInfos.OrderBy(c => c.showSequence).ToList();
        
            var CardInfos_jsonFormat = JsonSerializer.Serialize(CardInfos, new JsonSerializerOptions{
                WriteIndented = true
            });
            Console.WriteLine(CardInfos_jsonFormat);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"JSON read fail: {ex.Message}");
            CardInfos = new();
        }
    }
