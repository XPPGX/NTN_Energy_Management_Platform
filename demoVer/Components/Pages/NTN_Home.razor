    private void TriggerAlert(string _alertMessage_FromOtherFunc)
    {
        
        modal_IsOpen = true;

        AlertMessage_parent     = "";
        ConfirmBtn_Text_parent  = "";
        CancelBtn_Text_parent   = "";
        ConfirmBtn_Func_parent  = EventCallback.Empty;
        CancelBtn_Func_parent   = EventCallback.Empty;
        switch(_alertMessage_FromOtherFunc)
        {
            case "delete":
                AlertMessage_parent     = "警告 : 刪除後無法復原";
                ConfirmBtn_Text_parent  = "確定";
                CancelBtn_Text_parent   = "取消";
                ConfirmBtn_Func_parent  = EventCallback.Factory.Create(this, ConfirmDelete);
                CancelBtn_Func_parent   = EventCallback.Factory.Create(this, CancelDelete);
                break;
            case "save":
                AlertMessage_parent     = "是否確定要保存？";
                ConfirmBtn_Text_parent  = "確定";
                CancelBtn_Text_parent   = "取消";
                ConfirmBtn_Func_parent  = EventCallback.Factory.Create(this, ConfirmSave_InfoData);
                CancelBtn_Func_parent   = EventCallback.Factory.Create(this, CancelSave_InfoData);
                break;
            default:
                break;
        }
        
    }

