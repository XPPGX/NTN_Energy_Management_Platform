@namespace demoVer.Shared
@inherits LayoutComponentBase
<div class="overview-inner-card">
    <div class="smallIcon">
        <img src="@IconPath" style="width:48px; height:48px" />
    </div>
    <div class="overview-inner-card rightPart">
        @foreach(var pair in DataPairs)
        {
            <div class="overview-inner-card valueBlock">
                <div>@pair.Label</div>
                <div>:</div>
                <div>@pair.Unit</div>
            </div>
        }
    </div>
</div>

@code
{
    [Parameter] public string IconPath {get; set;}
    [Parameter] public List<(string Label, string Unit)> DataPairs {get; set;} = new();

    protected override void OnInitialized()
    {
        Console.WriteLine("InfoDataItem loaded!");
    }
}